<div class="row">
  <div class="col-sm-offset-2 col-sm-8">
  <h1>プロフィールを作る</h1>
    <%= form_for(@profile) do |f| %>
      <div class="form-group">
        <%= f.label :age, 'ご年齢' %>
        <%= f.text_field :age, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :sex, '性別' %>
        <%= f.text_field :sex, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :job, 'ご職業' %>
        <%= f.text_field :job, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :hobby, 'ご趣味' %>
        <%= f.text_field :hobby, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :comment, 'ひとこと' %>
        <%= f.text_field :comment, class: 'form-control' %>
      </div>
      <%= f.submit '作成！', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>